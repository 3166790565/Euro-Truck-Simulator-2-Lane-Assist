{
    "$schema": "http://json-schema.org/schema",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the plugin."
        },
        "authors": {
            "type": "array",
            "description": "The authors of the plugin.",
            "items": {
                "name": "string",
                "url": "string",
                "avatar": "string"
            }
        },
        "description": {
            "type": "string",
            "description": "The description of the plugin."
        },
        "version": {
            "type": "string",
            "description": "The version of the plugin."
        },
        "dependencies": {
            "type": "array",
            "description": "The dependencies of the plugin.",
            "items": {
                "name": "string"
            }
        },
        "modules": {
            "type": "array",
            "description": "List of modules the plugin runner will load.",
            "items": {
                "name": ["ScreenCapture", "SDKController", "ShowImage", "TruckSimAPI"]
            }
        },
        "compatible": {
            "type": "array",
            "description": "List of compatible operating systems.",
            "items": {
                "name": ["Windows", "Linux", "MacOS"]
            }
        },
        "settings": {
            "type": "array",
            "description": "Settings data to display on the frontend",
            "items": {
                "type": "object",
                "description": "A setting in the settings file.",
                "properties": {
                    "specials": {
                        "type": "array",
                        "description": "Special stuff that's not actually settings.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "special": {
                                    "type": "string",
                                    "description": "The special type.",
                                    "enum": ["Title", "Description", "Separator", "Space"]
                                },
                                "special_data": {
                                    "type": ["integer", "string"],
                                    "description": "The special data."
                                }
                            }
                        }
                    },
                    "name": {
                        "type": "string",
                        "description": "The name of the setting."
                    },
                    "key": {
                        "type": "string",
                        "description": "The setting key in the settings file."
                    },
                    "description": {
                        "type": "string",
                        "description": "The description of the setting."
                    },
                    "requires_restart": {
                        "type": "boolean",
                        "description": "Whether the setting requires a restart to take effect."
                    },
                    "type": {
                        "type": "object",
                        "description": "The type of the setting.",
                        "properties": {
                            "type": {
                                "type": "string",
                                "description": "The name of the setting type.",
                                "enum": ["string", "number", "boolean", "array", "object", "enum"]
                            },
                            "options": {
                                "type": "array",
                                "description": "If applicable (enum), the options for the setting.",
                                "items": {
                                    "data": "string"
                                }
                            },
                            "value_type":
                            {
                                "type": "string",
                                "description": "If applicable (array), the type of the values in the array.",
                                "enum": ["text", "number", "email", "url"]
                            },
                            "default":
                            {
                                "type": ["string", "number", "boolean", "array", "object"],
                                "description": "The default value for the setting."
                            },
                            "min": {
                                "type": "number",
                                "description": "If applicable (number), the minimum value for the setting. Having both min and max will create a slider."
                            },
                            "max": {
                                "type": "number",
                                "description": "If applicable (number), the maximum value for the setting. Having both min and max will create a slider."
                            },
                            "step": {
                                "type": "number",
                                "description": "If applicable (number), the step value for the setting."
                            },
                            "suffix": {
                                "type": "string",
                                "description": "If applicable (number), the suffix for the setting. (for example set to % for a percentage)"
                            }
                        }
                    }
                }
            }
        }
    }
}