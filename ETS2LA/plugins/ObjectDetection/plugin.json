{
    "$schema": "../schema.json",
    "name": "ObjectDetection",
    "authors": [
    {
        "name": "DylDev",
        "url": "https://github.com/DylDevs",
        "avatar": "https://avatars.githubusercontent.com/u/110776467?v=4"
    }, 
    {
        "name": "Tumppi066",
        "url": "https://github.com/Tumppi066",
        "avatar": "https://avatars.githubusercontent.com/u/83072683?v=4"
    }
    ],
    "description": "Detects various objects using computer vision and can display them in an output window and 3D visualization.",
    "version": "1.0",
    "dependencies": [],
    "modules": ["ScreenCapture", "ShowImage", "Raycasting", "TruckSimAPI"],
    "compatible": ["Windows", "Linux", "MacOS"],
    "max_fps": 60,
    "settings": [
        {
            "specials": [
                {
                    "special": "Title",
                    "special_data": "object_detection.settings.1.title"
                },
                {
                    "special": "Description",
                    "special_data": "object_detection.settings.1.description"
                },
                {
                    "special": "Separator"
                }
            ]
        },
        {
            "name": "object_detection.settings.2.name",
            "key": "device",
            "description": "object_detection.settings.2.description",
            "requires_restart": true,
            "type": {
                "type": "enum",
                "options": ["Automatic", "CPU", "GPU"]
            }
        },
        {
            "name": "object_detection.settings.3.name",
            "key": "mode",
            "description": "object_detection.settings.3.description",
            "requires_restart": true,
            "type": {
                "type": "enum",
                "options": ["Performance", "Quality"]
            }
        },
        {
            "name": "object_detection.settings.4.name",
            "key": "yolo_fps",
            "description": "object_detection.settings.4.description",
            "requires_restart": true,
            "type": {
                "type": "number"
            }
        },
        {
            "name": "object_detection.settings.5.name",
            "key": "model",
            "description": "object_detection.settings.5.description",
            "requires_restart": true,
            "type": {
                "type": "enum",
                "options": ["YoloV5", "YoloV7"]
            }
        },
        {
            "name": "object_detection.settings.6.name",
            "key": "dimensions",
            "description": "object_detection.settings.6.description",
            "requires_restart": true,
            "type": {
                "type": "array",
                "value_type": "number"
            }
        }
    ]
}